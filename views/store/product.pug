extends ../layout/main

block css-links
	link(rel="stylesheet" href="/css/store.css")

block content
	.container
		.row
			.col-md-7
				.product-info
					.gallery
						.scroller
							.slide 
								img(src="/compressed/IMG_2753-min.JPG" alt="")
							.slide
								img(src="/compressed/IMG_8827-min.JPG" alt="")
							.slide
								img(src="/compressed/IMG_2686retouched-removebg.png" alt="")
							.slide
								img(src="/compressed/IMG_2686retouched-removebg.png" alt="")
							.slide
								img(src="/compressed/IMG_2686retouched-removebg.png" alt="")
						button.previous &#10094;
						button.next &#10095;

			.col-md-5
				.product-details.container
					h2= product.name
					form(action="#").functionality.py-2 
						.colors.py-1
							p(style='font-size:1.4em;font-weight: bold') Colors
							.d-flex.col-sm-10
								each color in product.colors
									label.color
										input(type="radio" name="color" value=color)
										| #{color.toUpperCase()}

						.sizes.py-1
							p(style='font-size:1.4em;font-weight: bold') Sizes
							.d-flex.flex-wrap.col-sm-10
								each size in product.sizes
									label.size
										input(type="radio" name="size" value=size[1])
										| #{size[0].toUpperCase()}

						.d-flex.py-3.justify-between
							p.f-2.price= "\u20a6" + product.price
							button(type='submit').add-to-cart <i class='fa fa-cart-plus'></i> Add to Cart 

