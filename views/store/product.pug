extends ../layout/main

block css-links
	link(rel="stylesheet" href="/css/store.css")

block content
	.container
		h1 [product name]

	.row
		.col-md-7
			.product-info
				.gallery
					.scroller
						.slide 
							img(src="/compressed/IMG_2753-min.JPG" alt="")
						.slide
							img(src="/compressed/IMG_8827-min.JPG" alt="")
						.slide
							img(src="/compressed/IMG_2686retouched-removebg.png" alt="")
						.slide
							img(src="/compressed/IMG_2686retouched-removebg.png" alt="")
						.slide
							img(src="/compressed/IMG_2686retouched-removebg.png" alt="")
					button.previous &#10094;
					button.next &#10095;

		.col-md-5
			.product-details.container
				h2 [product name]
				form(action="#").functionality.py-2 
					.colors.py-1
						p(style='font-size:1.4em;font-weight: bold') Colors
						.d-flex.justify-between.col-sm-6
							label
								input(type="radio" name="color" value='blue')
								| Blue
							label
								input(type="radio" name="color" value='black')
								| Black
							label
								input(type="radio" name="color" value='brown')
								| Brown
							label
								input(type="radio" name="color" value='red')
								| Red
							label
								input(type="radio" name="color" value='grey')
								| Grey

					.sizes.py-1
						p(style='font-size:1.4em;font-weight: bold') Sizes
						.d-flex.justify-between.col-sm-6
							label
								input(type="radio" name="size" value='xs')
								| Extra-Small
							label
								input(type="radio" name="size" value='s')
								| Small
							label
								input(type="radio" name="size" value='m')
								| Medium
							label
								input(type="radio" name="size" value='l')
								| Large
							label
								input(type="radio" name="size" value='xl')
								| Extra-Large
					
					.d-flex.py-3.justify-between
						p.f-2.price &#x20a6;[price]
						button(type='submit').add-to-cart <i class='fa fa-cart-plus'></i> Add to Cart 

