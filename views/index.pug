extends layout/main

block css-links 
	link(rel="stylesheet" href="/css/index.css")
	link(rel="stylesheet" href="/css/store.css")


block content
	.container.p-0
		.showcase.mt-5
			.img-display
				img(src="/compressed/IMG_2753-min.JPG" alt='').d-none.d-sm-block
				img(src="/compressed/IMG_2677ret-min.jpg" alt='').d-none.d-md-block
				img(src="/compressed/IMG_2672retouched-min.jpg" alt='').d-none.d-md-block
				img(src="/compressed/IMG_2738ret222-min.jpg" alt='')
			.text-display
				.center
					//- h1 カイゼンへようこそ
					h1.theme /&dot;kaizen&dot;/ - (n)
					p.f-2 Japanese: “kai-” means “change”<br> and “-zen” means “good.”

	.container.bg-white.mt-4
		h3.center Popular

		.releases.mt-3
			//- Load new releases
			each release in releases
				.col-sm-4.col-md-3.col-6.release(style=`background: tomato url('${release.images[0]}') no-repeat;background-size: cover;background-position: 50%;`)
					a(href='/new-releases')
						p.title= release.name
						p.info= "\u20a6 " + release.price

		h4.mt-4 Latest Wears
		.wears 
			each late in latest
				a(href=late.link).wear 
					img(src=late.images[0] alt="")
					.info
						.title=late.name